{
  "name": "todoapp",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "An ASP.NET Core app for managing Todo items",
  "scripts": {
    "build": "npm run compile && npm run format && npm run lint && npm test",
    "compile": "webpack",
    "format": "prettier --write scripts/**/*.ts",
    "lint": "eslint scripts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martincostello/dotnet-minimal-api-integration-testing.git"
  },
  "author": "martincostello",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "7.28.0",
    "@babel/preset-env": "7.28.0",
    "@stylistic/eslint-plugin": "5.2.1",
    "@typescript-eslint/eslint-plugin": "8.38.0",
    "@typescript-eslint/parser": "8.38.0",
    "eslint": "9.31.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.0.1",
    "globals": "16.3.0",
    "jest": "30.0.5",
    "moment": "2.30.1",
    "prettier": "3.6.2",
    "ts-jest": "29.4.0",
    "ts-loader": "9.5.2",
    "tsify": "5.0.4",
    "typescript": "5.8.3",
    "webpack": "5.100.2",
    "webpack-cli": "6.0.1"
  },
  "jest": {
    "clearMocks": true,
    "reporters": [
      "default",
      "github-actions"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "auto",
    "printWidth": 80,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false
  }
}
